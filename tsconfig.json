{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}